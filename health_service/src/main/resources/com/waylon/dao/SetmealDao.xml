<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.waylon.dao.SetmealDao">

    <!--新增-->
    <insert id="add" parameterType="com.waylon.pojo.Setmeal">
        <selectKey resultType="java.lang.Integer" order="AFTER"
                   keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_setmeal
        (code,name,sex,age,helpCode,price,remark,attention,img)
        values
        (#{code},#{name},#{sex},#{age},#{helpCode},#{price},#{remark},#{attention},#{img})
    </insert>

    <!--绑定套餐和检查组多对多关系-->
    <insert id="setSetmealAndCheckGroup" parameterType="HashMap">
        insert into t_setmeal_checkgroup(setmeal_id, checkgroup_id)
        values (#{setmealId}, #{checkGroupId})
    </insert>

    <!--分页条件查询-->
    <select id="selectByCondition" parameterType="String" resultType="com.waylon.pojo.Setmeal">
        select * from t_setmeal
        <if test="value != null and value.length > 0">
            where code = #{value} or name = #{value}
        </if>
    </select>

    <!--根据套餐id删除中间表数据（清理原有关联关系）-->
    <delete id="deleteAssociation" parameterType="int">
        delete
        from t_setmeal_checkgroup
        where setmeal_id = #{id}
    </delete>

    <!--删除-->
    <delete id="deleteById" parameterType="int">
        delete
        from t_setmeal
        where id = #{id}
    </delete>

    <select id="findCheckGroupIdsBySetmealId" parameterType="int" resultType="int">
        select checkgroup_id
        from t_setmeal_checkgroup
        where setmeal_id = #{id}
    </select>

    <!-- 编辑 -->
    <update id="edit" parameterType="com.waylon.pojo.Setmeal">
        update t_setmeal
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="findAll" resultType="com.waylon.pojo.Setmeal">
        select *
        from t_setmeal
    </select>

    <!-- 多对多查询 -->
    <resultMap type="com.waylon.pojo.Setmeal" id="baseResultMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="age" property="age"/>
        <result column="price" property="price"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
        <result column="img" property="img"/>
    </resultMap>

    <resultMap type="com.waylon.pojo.Setmeal" id="findByIdResultMap" extends="baseResultMap">
        <collection property="checkGroups"
                    javaType="ArrayList"
                    ofType="com.waylon.pojo.CheckGroup"
                    column="id"
                    select="com.waylon.dao.CheckGroupDao.findCheckGroupById">
        </collection>
    </resultMap>

    <!-- 返回的是封装的集合 resultMap -->
    <select id="findById" parameterType="int" resultMap="findByIdResultMap">
        select *
        from t_setmeal
        where id = #{id}
    </select>

</mapper>